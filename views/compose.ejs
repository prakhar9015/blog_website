<script>
  function getMonthShortName(monthNo) {
    const date = new Date();
    date.setMonth(monthNo);
    return date.toLocaleString("en-US", {
      month: "long"
    });
  }
  var date = new Date();
  var year = date.getFullYear(); // 2023
  var ndate = date.getDate(); // 14
  var month = date.getMonth();

  document.getElementById("fullDATE").innerHTML =
    getMonthShortName(month) + " " + ndate + "," + " " + year;
</script>

